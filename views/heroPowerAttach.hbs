    <body>
      <h1>Attach Hero Power</h1>
      <div class="attach-box">
        <h2>{{superhero.name}}</h2>
        <img class="heropower" src="{{superhero.imageUrl}}">
        <form action='/heropowerattach/{{superhero.id}}' method="POST">
         <br>
          <input type="submit" value="Hero Power Attach">
          <br>
          <br>
          <select id="heropower" name="heropower">
            {{#each heropowers}}
            {{> heroPowerTemplate heropower=this}}
            {{/each}}
          </select>
        </form>
        {{#if superhero.heropowers.length}}
        {{#each superhero.heropowers}}
        {{> heroPowers heropower=this}}
        {{/each}}
        {{else}}
        <h3 class="italic">This superhero doesn't have any super powers yet</h3>
        {{/if}}
        <a class="btn" href="/">Back</a>

      </div>
