<div class="edit">
  <h3 class="form-title">Edit Villain</h3>
  <form action='/villainedit/{{supervillain.id}}' method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{supervillain.name}}">

     <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{supervillain.imageUrl}}">
    
    <label for="age">Age</label>
    <textarea id="age" name="age"/>{{supervillain.age}}</textarea>

     <label for="height">Height</label>
    <textarea id="height" name="height"/>{{supervillain.height}}</textarea>

     <label for="weight">Weight</label>
    <textarea id="weight" name="weight"/>{{supervillain.weight}}</textarea>

     <label for="gender">Gender</label>
    <textarea id="gender" name="gender"/>{{supervillain.gender}}</textarea>

    <input type="submit" value="villainedit">
  </form>
