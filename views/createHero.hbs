<div class="create-hero-villain">
   <h3>Create a Hero</h3>
      <form action='/createhero' method="POST"">
        <label for="name">Hero Name</label>
        <input type="text" id="name" name="name">

        <label for="image">ImageUrl</label>
        <input type="text" id="image" name="imageUrl">

        <label for="age">Age</label>
        <input type="string" id="age" name="age" min="1.00" max="5000.00">

        <label for="height">Height</label>
        <input type="number" id="height" name="height" min="2.00" max="50.00" step="0.1">

        <label for="weight">Weight</label>
        <input type="number" id="weight" name="weight" min="1.00" max="2000.00" step="0.01">

        <label for="gender" type="string">Gender</label>
        <select id="gender" name="gender">
          <option value="male">Male</option>
          <option value="female">Female</option>
        </select>

        <input type="submit" value="Create Hero">
      </form>
</div> 
